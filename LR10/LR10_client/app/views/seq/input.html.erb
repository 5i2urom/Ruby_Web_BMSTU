<%= form_with url: show_path, data: {turbo: false}, method: :get do |form| %>
    <table>
        <tr>
            <td>
                <%= form.label("Введите количество чисел: ") %>
            </td>
            <td>
                <%= form.text_field :num, :value => 10 %> <br>
            </td>
        </tr>
        <tr>
            <td>
                <%= form.label("Введите последовательность: ") %>
            </td>
            <td>
                <%= form.text_field :str, :value => "6 28 3 4 5 6 6 496 3 6" %> <br>
            </td>
        </tr>
        <tr>
            <td>
                <%= form.radio_button :mode, 'xml' %> XML
            </td>
        </tr>
        <tr>
            <td>
                <%= form.radio_button :mode, 'html' %> HTML
            </td>
        </tr>
        <tr>
            <td>
                <%= form.radio_button :mode, 'server' %> SERVER
            </td>
        </tr>
                <tr>
            <td>
                <%= form.submit("Вывести", id: 'submit') %>
            </td>
        </tr>
    </table>  
<% end %>